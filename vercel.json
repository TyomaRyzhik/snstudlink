{
  "version": 2,
  "installCommand": "npm run install:all",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "includeFiles": ["server/dist/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/src/index.ts" },

    { "handle": "filesystem" },

    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
